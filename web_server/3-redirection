#!/usr/bin/env bash
# This script installs and configures Nginx to redirect /redirect_me to YouTube with a 301 status

# Exit on error
set -e

# Update packages
apt-get update -y

# Install nginx
apt-get install -y nginx

# Replace default index page
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html

# Configure 301 redirect in default site config
sed -i '/server_name _;/a \\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart nginx (without systemctl)
service nginx restart

